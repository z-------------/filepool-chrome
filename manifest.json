{
    "manifest_version": 2,
    "name": "filepool",
    "version": "0.0.1",
    
    "description": "Quick and easy self-destructing file sharing.",
    
    "permissions": [
        "activeTab",
        "https://filepool-guardo.rhcloud.com/*"
    ],
    
    "background": {
        "scripts": ["popup_listener.js"],
        "persistent": false
    },
    
    "browser_action": {
        "default_title": "filepool"
    },
    
    "web_accessible_resources": [
        "popup.html"
    ]
}